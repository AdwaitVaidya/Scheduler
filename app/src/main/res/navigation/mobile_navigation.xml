<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_day">

    <fragment
        android:id="@+id/navigation_day"
        android:name="com.example.scheduler.ui.dayFragment.DayFragment"
        android:label="@string/bottom_navigation_today"
        tools:layout="@layout/day_fragment" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.scheduler.ui.dashboard.DashboardFragment"
        android:label="@string/bottom_navigation_week"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.scheduler.ui.notifications.NotificationsFragment"
        android:label="@string/bottom_navigation_year"
        tools:layout="@layout/fragment_notifications" />
</navigation>